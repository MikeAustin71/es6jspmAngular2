{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "diagnostics": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "version": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!.././node_modules/**",
        "!.././lib/**"
    ],
    "files": [
        "main.ts"
    ]
}
